
{block content}
    {block head}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
       <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	 <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {/block}

    {block body}
        {block header}
            {include 'header.latte'}
        {/block}

        <div class="bg-light">
            {foreach $articleValue as $item}
                    <div cla">
                        <div class="col-lg-8 float-md-right" >
                            <div class="card d-inline-block col-ml-8" style="width:75%">
                                <div class="card-header">
				{if $item->title_image == NULL}
                                    <img src="https://www.avenuemagazine.com/wp-content/themes/avenue-magazine-new/images/no-image-available.png"
                                    alt="no_image" style="width: 100%;;">
						
                                {else} <img class="card-img-top" title="{$item->title_image|noescape}" alt="{$item->title_image|noescape}" src="{$item->title_image|noescape}" style="width: 100%; height:350px;">{/if}
                                <span class="card-title display-4 text-center text-block">
                                {$item->url|noescape}
				</span>
				</div>
                                <article class="article-wrapper">{$item->description|noescape}</article>
                                <hr>
				<div class="card-footer">
                                <h6 class="date display-6">Vytvo≈ôeno dne: </h6>
                                <label class="badge badge-secondary ">{$item->date_created|date:'D. M. Y'}{sep}{$item->date_created|date:'h:i:s'}{/sep}</label>
                                <label class="text-center"> Sekce: <a n:href="Article:edit $item->url">{$item->url|upper}</a></label>
                            		</div>
				</div>
                        </div>
                        <div class="col-lg-4">
                            {foreach $userValue as $userOutput}
                                <div class="card d-inline-block" style="width:30rem;margin:20px 0 24px 0">
                                    <img class="card-img-top" src="{$userOutput->prof_image|noescape}">
                                    <div class="card-body">

                                        <h4 class="card-title">{$userOutput->username|upper}</h4>
                                        <label class="badge badge-secondary">{$userOutput->role}</label>
                                        <p class="card-text"><a href="#">{$userOutput->url}</a></p>
                                        <a href="javascript:void(0)" class="btn btn-primary">See Profile</a>

                                    </div>
                                </div>
                            {/foreach}
                        </div>
                    </div>
            {/foreach}

            {foreach $websiteElementValueHeader as $page_footer}
                <div class="row">
                    <div class="col">
                        <footer class="footer bg-light p-5" id="page_footer-{$page_footer}">
                            
				<p class="text-center text-muted bg-light card-footer"> {$page_footer->main_title|upper}</p>
                        </footer>
                    </div>
                </div>
            {/foreach}
        </div>
    {/block}
{/block}
